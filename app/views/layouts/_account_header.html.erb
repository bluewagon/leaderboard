<ul class="right">
  <li class="divider"></li>
  <% if user_signed_in? %>
    <li class="">
      <%= link_to current_user.email, user_show_path(current_user) %>
    </li>
    <li class="divider"></li>
    <li class="">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
    </li>  
  <% else %>
    <li class="">
    <%= link_to 'Login', new_user_session_path %>
    </li>
    <li class="divider"></li>
    <li class="">
      <%= link_to 'Register', new_user_registration_path %>
    </li> 
  <% end %>
</ul>